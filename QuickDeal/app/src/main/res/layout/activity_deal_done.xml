<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuickDealActivity"
    android:background="@drawable/dialog_border" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/dealdone"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="DEAL DONE?"
        android:textSize="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/not_yet"
            android:text="Not Yet"
            android:textColor="@color/unreadMessageTitleColor"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/deal_button_shape"
            android:gravity="center"/>
        <Button
            android:id="@+id/yes"
            android:text="Yes"
            android:textColor="@color/unreadMessageTitleColor"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/deal_button_shape"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
